<% if flash[:review_errors] %>
    <% flash[:review_errors].each do |error| %>
        <%= error %>
    <% end %>
<% end %>

<%= form_for @user do |f| %>


    <p><%= f.label :name %></p>
    <p><%= f.text_field :name %></p>

    <p><%= f.label :email %></p>
    <p><%= f.text_field :email %></p>

    <p><%= f.label :password %></p>
    <p><%= f.password_field :password %></p>
    <%= f.submit %>

    <% end %>
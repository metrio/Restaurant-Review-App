<% if flash[:review_errors] %>
    <% flash[:review_errors].each do |error| %>
        <%= error %>
    <% end %>
<% end %>

<div class="form-container">

    <%= form_for @review do |f| %>

        
        <p><%= f.label :business_Name %></p>
        <p><%= f.collection_select :business_id, Business.all, :id, :name%></p>
        <br>
        <p><%= f.label :description %></p>
        <p><%= f.text_area :description %></p>
        <br>
        <p><%= f.label :covid_index %></p>
        <p><%= f.number_field :covid_index, max: 5 %></p>
        <br>
        <%= f.hidden_field :user_id, value: session[:user_id] %>

        <br>
        <%= f.submit %>
        
    <% end %>

</div>